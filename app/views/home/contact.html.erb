<div class="max-w-xl mx-auto py-8">
  <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Contact Me</h2>
  <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :name, class: "block text-lg font-medium text-gray-800" %>
      <%= form.text_field :name, required: true, class: "mt-2 block w-full shadow-sm sm:text-lg border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= form.label :email, class: "block text-lg font-medium text-gray-800" %>
      <%= form.email_field :email, required: true, class: "mt-2 block w-full shadow-sm sm:text-lg border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= form.label :how_can_i_help_you, class: "block text-lg font-medium text-gray-800" %>
      <%= form.text_area :message, required: true, rows: 6, class: "mt-2 block w-full shadow-sm sm:text-lg border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div class="text-center mt-4">
      <%= form.submit "Send Message", class: "px-6 py-3 bg-blue-500 text-white text-lg rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-all duration-300" %>
    </div>
  <% end %>
</div>
